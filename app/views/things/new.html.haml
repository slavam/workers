= form_for(@thing, :html => { :multipart => true }) do |f| 
  - if @thing.errors.any? 
    #error_explanation
      %h2= pluralize(@thing.errors.count, "error") +" prohibited this thing from being saved:"
      - @thing.errors.full_messages.each do |msg| 
        = msg 
  = f.label :image 
  = f.file_field :image 

  .actions
    = f.submit 
